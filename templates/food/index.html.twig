{% extends 'baseAdmin.html.twig' %}

{% block title %}Food index{% endblock %}

{% block body %}
    <div class="content-wrapper">
        <h1>Food index</h1>

        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Prix</th>
                <th>Categories</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for food in food %}
                <tr>
                    <td>{{ food.id }}</td>
                    <td>{{ food.Nom }}</td>
                    <td>{{ food.Description }}</td>
                    <td>{{ food.prix }}</td>
                    <td>{{ food.categoriesFood.nom }}</td>
                    <td>
                        <a href="{{ path('food_show', {'id': food.id}) }}"><button class="btn btn-success">Afficher</button></a>
                        <a href="{{ path('food_edit', {'id': food.id}) }}"><button class="btn btn-warning">Modifier</button></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">Rien d'ajouter</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('food_new') }}"><button class="btn btn-dark">Ajouter</button></a>
    </div>
{% endblock %}
